<Window x:Class="Sport_example_3.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sport_example_3.Views"
        mc:Ignorable="d"
        Title="Справочник сотрудников" MinHeight="600" MinWidth="800" Height="600" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/HandBookWindowDefaultStyle.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="85*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Список сотрудников:"></TextBlock>
            <DataGrid x:Name="HandBookDataGrid" ItemsSource="{Binding EmployeeList}" SelectedItem="{Binding SelectedEmployee}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код сотрудника" Binding="{Binding Id}" Width="5*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="20*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="20*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}" Width="10*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="5*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Номер телефона" Binding="{Binding PhoneNumber}" Width="20*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Должность" Binding="{Binding PositionEmployee.Name}" Width="20*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Изменить" Command="{Binding EditCommand}" CommandParameter="{Binding ElementName=HandBookDataGrid, Path=SelectedItem}"></Button>
                <Button Content="Удалить" Command="{Binding DeleteCommand}" CommandParameter="{Binding ElementName=HandBookDataGrid, Path=SelectedItem}"></Button>
                <Button Content="Добавить" Command="{Binding AddCommand}" CommandParameter="{Binding ElementName=HandBookDataGrid, Path=SelectedItem}"></Button>
            </StackPanel>
            
            
        </StackPanel>
        <Button x:Name="BackButton"  Content="Назад" VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom" Grid.Row="2" Click="BackButton_Click"></Button>




    </Grid>
</Window>
